{
  "project": {
    "name": "revops-slack-bedrock",
    "description": "Slack integration with Amazon Bedrock Agents following AWS best practices",
    "version": "1.0.0",
    "architecture": "AWS Best Practices"
  },
  "aws": {
    "profile": "YOUR_AWS_PROFILE_NAME",
    "region": "YOUR_AWS_REGION",
    "account_id": "YOUR_AWS_ACCOUNT_ID"
  },
  "bedrock": {
    "agent_id": "XXXXXXXXXX",
    "agent_alias_id": "XXXXXXXXXX",
    "agent_name": "Manager_Agent_V4",
    "agent_role": "SUPERVISOR",
    "collaborators": [
      {
        "name": "DataAgent",
        "agent_id": "XXXXXXXXXX",
        "alias_id": "XXXXXXXXXX"
      },
      {
        "name": "DealAnalysisAgent",
        "agent_id": "XXXXXXXXXX",
        "alias_id": "XXXXXXXXXX"
      },
      {
        "name": "LeadAnalysisAgent",
        "agent_id": "XXXXXXXXXX",
        "alias_id": "XXXXXXXXXX"
      },
      {
        "name": "WebSearchAgent", 
        "agent_id": "XXXXXXXXXX",
        "alias_id": "XXXXXXXXXX"
      },
      {
        "name": "ExecutionAgent",
        "agent_id": "XXXXXXXXXX", 
        "alias_id": "XXXXXXXXXX"
      }
    ]
  },
  "slack": {
    "app_id": "XXXXXXXXXX",
    "client_id": "XXXXXXXXXX.XXXXXXXXXXXXX",
    "app_name": "RevBot",
    "scopes": [
      "chat:write",
      "im:read", 
      "im:write"
    ],
    "events": [
      "app_mention"
    ]
  },
  "infrastructure": {
    "stack_name": "revops-slack-bedrock-stack",
    "lambda_timeout": {
      "handler": 30,
      "processor": 300
    },
    "lambda_memory": {
      "handler": 256,
      "processor": 512
    },
    "sqs": {
      "visibility_timeout": 300,
      "message_retention": 1209600,
      "max_receive_count": 3
    },
    "secrets_cache_ttl": 300
  },
  "monitoring": {
    "log_retention_days": 30,
    "log_level": "INFO"
  },
  "deployment": {
    "status": "aws_best_practices_ready",
    "last_updated": "2025-07-05",
    "architecture_type": "api_gateway_sqs_lambda",
    "conversation_management": "bedrock_native_sessions",
    "async_processing": true,
    "streaming_responses": true
  }
}